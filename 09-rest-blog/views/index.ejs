<%- include("partials/header") %>

<h1>This is index</h1>

<a href="/blogs/new">Add new blog post</a>

<% blogs.forEach((blog) => { %>
  <div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>">
    <p><%= blog.created %></p>
    <p><%= blog.body.substring(0, 100) %></p>
    <a href="/blogs/<%= blog._id %>">Read more</a>
  </div>
<% }) %>

<%- include("partials/footer") %>
