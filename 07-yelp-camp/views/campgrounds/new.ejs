<%- include("../partials/header") %>

<h1>Create new camp</h1>

<form action="/campgrounds" method="POST">
  <input type="text" placeholder="add camp name" name="name">
  <input type="text" placeholder="add the description" name="description">
  <input type="number" placeholder="add the price, if any" name="price" min="0.00" step="1.00">
  <input type="text" placeholder="add img url" name="imgurl">
  <input type="submit" value="Submit new camp">
</form>

<a href="/campgrounds" class="btn btn-primary">Go back</a>

