<%- include("../partials/header") %>

<h1>Edit <%= campground.name %></h1>

<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="form-control">
    <label for="name">Name:</label>
    <input type="text" placeholder="add camp name" value="<%= campground.name %>" name="campground[name]">
  </div>
  <div class="form-control">
    <label for="description">Description:</label>
    <input type="text" placeholder="add camp description" value="<%= campground.description %>" name="campground[description]">
  </div>
  <div class="form-control">
    <label for="price">Price:</label>
    <input type="text" placeholder="add camp price" value="<%= campground.price %>" name="campground[price]">
  </div>
  <div class="form-control">
    <label for="imgurl">Image URL:</label>
    <input type="text" placeholder="add image url" value="<%= campground.image %>" name="campground[imgurl]">
  </div>
  <div class="form-control">
    <input type="submit" value="Submit new camp">
  </div>
</form>

<%- include("../partials/footer") %>
